package Student_EX;

import java.util.InputMismatchException;
import java.util.Scanner;

public class ScoreBoard {

	public static void main(String[] args) {

		Student st[] = new Student[4];
		Scanner sc[] = new Scanner[4];
		
		for(int i=0;i<sc.length;i++)
			sc[i] = new Scanner(System.in);
		
		for (int i = 0; i < st.length; i++)
			st[i] = new Student();

		
		for(int i=0; i<st.length;i++) {
			
			try {
			System.out.println("학번을 입력하세요");
			st[i].number = sc[i].nextInt();
			sc[i].nextLine();
			System.out.println(st[i].number);
			System.out.println("학생 이름을 입력하세요");
			st[i].name = sc[i].nextLine();
			System.out.println(st[i].name);
			
			System.out.println("국어 점수를 입력하세요");
			sc[i].nextLine();
			st[i].kor = sc[i].nextInt();
			System.out.println(st[i].kor);
			System.out.println("영어 점수를 입력하세요");
			st[i].eng = sc[i].nextInt();
			System.out.println(st[i].eng);
			System.out.println("수학 점수를 입력하세요");
			st[i].math = sc[i].nextInt();
			System.out.println(st[i].math);
			}
			catch(InputMismatchException e) {
				System.out.println("잘못된 입력입니다.");
			}
		
		}
		
		for(int i=0;i<st.length;i++) {
		System.out.println(st[i].number +"번 "+st[i].name+" 학생의 평균은 "+(st[i].kor+st[i].eng+st[i].math)/3 + "이고, 총합은 "+ (st[i].kor+st[i].eng+st[i].math)+"이며, 국어 "+st[i].kor+"점, 영어 "+st[i].eng+"점, 수학 "+st[i].math+"점 입니다.");
		
		}
		

		
	}
}
